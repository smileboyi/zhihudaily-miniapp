/* miniprogram/pages/storie-comment/storie-comment.wxss */
page {
  display: flex;
  flex-direction: column;
  height: 100%;
}
.sidebar {
  display: flex;
  align-items: center;
  min-height: 2.55rem;
  padding: 0 0.875rem;
  font-size: 1.125rem;
  text-align: left;
  color: #fff;
  background-color: #00a2ed;
}
.sidebar__left {
  display: flex;
  height: 100%;
  align-items: center;
}
.sidebar__back {
  display: inline-block;
  margin-top: 12rpx;
}
.sidebar__info {
  text-indent: 1.875rem;
}
.sidebar__svg {
  position: relative;
  display: inline-block;
  width: 1.25rem;
  height: 1.25rem;
}

.comment-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 2.25rem;
  line-height: 2.25rem;
  padding: 0 0.75rem;
  color: #515151;
  border-bottom: 1px solid #e2e2e2;
}
.comment-head__text {
  font-size: 0.875rem;
  text-align: left;
}
.comment-head__icon {
  display: inline-block;
  width: 1.125rem;
  height: 1.125rem;
  outline: 5px solid transparent;
}

.comments {
}
.comment {
  display: flex;
  min-height: 5.625rem;
  padding: 0.75rem;
  border-bottom: 1px solid #e2e2e2;
  box-sizing: border-box;
}
.comment__avatar {
  display: inline-block;
  width: 1.8125rem;
  min-width: 1.8125rem;
  height: 1.8125rem;
  border-radius: 50%;
  font-size: 0;
  border: none;
  background-color: #ccc;
}
.comment__main {
  flex: 1;
  padding-left: 7px;
}
.comment__bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 1.25rem;
  line-height: 1.25rem;
  font-weight: 500;
  color: #515151;
}
.comment__name {
  font-size: 0.875rem;
}
.comment__like {
}
.comment__like-svg {
  display: inline-block;
  width: 0.875rem;
  height: 0.875rem;
  margin-right: 5px;
}
.comment__content {
  display: block;
  min-height: 2.875rem;
  line-height: 1.4;
  padding: 5px 0;
  margin: 0;
  font-size: 0.875rem;
  text-align: left;
  color: #515151;
  box-sizing: border-box;
}
.comment__datetime {
  float: left;
  font-size: 0.75rem;
  text-align: left;
  color: #ddd;
}
